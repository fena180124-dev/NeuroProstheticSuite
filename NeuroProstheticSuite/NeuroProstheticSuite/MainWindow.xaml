<Window x:Class="NeuroProstheticSuite.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="NeuroProstheticSuite" Height="640" Width="1000" Background="#121212">
    <Window.Resources>
        <Style x:Key="SubHeaderStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Foreground" Value="LightGray"/>
            <Setter Property="Margin" Value="0,0,0,8"/>
        </Style>

        <Style x:Key="ModernNavButton" TargetType="Button">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderBrush" Value="Transparent"/>
            <Setter Property="Padding" Value="10,8"/>
            <Setter Property="HorizontalContentAlignment" Value="Left"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="4"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter VerticalAlignment="Center" />
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#2B2B2D"/>
                </Trigger>
                <Trigger Property="IsPressed" Value="True">
                    <Setter Property="Background" Value="#373739"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </Window.Resources>

    <Grid Margin="12">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="300"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- Left navigation / panel -->
        <Border Grid.Column="0" Background="#2D2D30" CornerRadius="8" Padding="15" Margin="0,0,12,0">
            <StackPanel>
                <TextBlock Text="PROSTHETIC SUITE" FontSize="18" FontWeight="ExtraBold" Foreground="#00BFFF" Margin="0,0,0,24"/>

                <Button Content="Dashboard Sinyal (Real-Time)"
                        Style="{StaticResource ModernNavButton}"
                        Click="NavigateToDashboard"
                        x:Name="btnDashboard"/>

                <Button Content="Analisis Statis &amp; 3D Konsep"
                        Style="{StaticResource ModernNavButton}"
                        Click="NavigateToStaticAnalysis"
                        x:Name="btnStaticAnalysis"/>

                <Button Content="Pemodelan Kontrol"
                        Style="{StaticResource ModernNavButton}"
                        Click="NavigateToModeling"
                        x:Name="btnModeling"/>

                <Button Content="Statistik (FSR &amp; Suhu)"
                        Style="{StaticResource ModernNavButton}"
                        Click="NavigateToStatistics"
                        x:Name="btnStatistics"/>

                <Border Background="#3E3E42" CornerRadius="6" Margin="0,16,0,0" Padding="10" Height="140">
                    <StackPanel>
                        <TextBlock Text="VISUALISASI KONSEP PROSTETIK &amp; PENEMPATAN SENSOR" Style="{StaticResource SubHeaderStyle}" FontSize="13" Foreground="#00BFFF"/>
                        <TextBlock Text="[MODEL 3D: Lengan &amp; Tangan Prostetik]" FontSize="12" Foreground="#CCCCCC"/>
                        <TextBlock Text="OpenBCI (EEG): Kepala | MyoWare (EMG): Lengan Bawah" FontSize="11" Foreground="#888888"/>
                        <TextBlock Text="FSR &amp; TTP223: Jari-jari Genggaman | DS18B20: Wrist/Casing" FontSize="11" Foreground="#888888"/>
                    </StackPanel>
                </Border>
            </StackPanel>
        </Border>

        <!-- Right content area: Border wraps Grid to allow CornerRadius and Padding -->
        <Border Grid.Column="1" Background="#1E1E1E" CornerRadius="8" Padding="18">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Grid.Row="0">
                    <StackPanel x:Name="HiddenStatusControls" Orientation="Horizontal" Visibility="Collapsed">
                        <ComboBox x:Name="CmbPorts" Width="160" Margin="0,0,8,0"/>
                        <TextBlock x:Name="TxtConnectionStatus" Text="Status: -" VerticalAlignment="Center"/>
                    </StackPanel>
                </StackPanel>

                <!-- Content region: will host UserControls -->
                <Border Grid.Row="1" Background="#151515" CornerRadius="6" Padding="16">
                    <ContentControl x:Name="ContentRegion"/>
                </Border>

                <Grid x:Name="GridStaticAnalysis" Grid.Row="1" Visibility="Collapsed"/>
            </Grid>
        </Border>
    </Grid>
</Window>
